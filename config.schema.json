{
  "headerDisplay": "Make sure to give set the right IP address for the Serial Bridge. If the bridge WEB UI doesn't ron on port 80, please specify the port as well.",
  "footerDisplay": "See [homebridge-comelit-sb](https://github.com/madchicken/homebridge-comelit-sb) for more information and instructions.",
  "pluginAlias": "ComelitVedo",
  "pluginType": "platform",
  "singular": false,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Alarm name",
        "type": "string",
        "required": true,
        "default": "VEDO"
      },
      "alarm_address": {
        "title": "HTTP address for VEDO alarm",
        "type": "string",
        "required": true
      },
      "alarm_port": {
        "title": "HTTP port VEDO alarm",
        "type": "integer",
        "default": 80,
        "maximum": 65535,
        "required": false
      },
      "alarm_code": {
        "title": "Secret code for VEDO alarm",
        "type": "string",
        "required": true,
        "x-schema-form": {
          "type": "password",
          "placeholder": "111111"
        }
      },
      "update_interval": {
        "title": "Update timeout",
        "description": "Number of seconds to poll the alarm for a refresh",
        "type": "integer",
        "default": 5,
        "minimum": 1,
        "maximum": 60
      },
      "map_sensors": {
        "title": "Map alarm sensors as occupancy sensors in HomeKit",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "area_mapping": {
        "title": "Alarm Areas Setup",
        "type": "object",
        "properties": {
          "away_areas": {
            "title": "Away area",
            "type": "array",
            "items": {
              "title": "Area name",
              "type": "string"
            }
          },
          "home_areas": {
            "title": "Home area",
            "type": "array",
            "items": {
              "title": "Area name",
              "type": "string"
            }
          },
          "night_areas": {
            "title": "Night area",
            "type": "array",
            "items": {
              "title": "Area name",
              "type": "string"
            }
          },
          "always_on_areas": {
            "title": "Always ON areas",
            "type": "array",
            "items": {
              "title": "Area name",
              "type": "string"
            }
          }
        }
      },
      "advanced": {
        "Title": "Advanced URL configuration",
        "type": "object",
        "properties": {
          "login": {
            "title": "Path for login action",
            "type": "string",
            "required": true,
            "default": "/login.cgi"
          },
          "login_info": {
            "title": "Path for login info action",
            "type": "string",
            "required": true,
            "default": "/login.json"
          },
          "area_desc": {
            "title": "Path for area_desc request",
            "type": "string",
            "required": true,
            "default": "/user/area_desc.json"
          },
          "area_stat": {
            "title": "Path for area_stat request",
            "type": "string",
            "required": true,
            "default": "/user/area_stat.json"
          },
          "zone_desc": {
            "title": "Path for zone_desc request",
            "type": "string",
            "required": true,
            "default": "/user/zone_desc.json"
          },
          "zone_stat": {
            "title": "Path for zone_stat request",
            "type": "string",
            "required": true,
            "default": "/user/zone_stat.json"
          },
          "action": {
            "title": "Path for action request",
            "type": "string",
            "required": true,
            "default": "/action.cgi"
          },
          "code_param": {
            "title": "Name for parameter to use as code when logging in (usually code or alm)",
            "type": "string",
            "required": true,
            "default": "code"
          }
        }
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "expandable": false,
      "title": "Main settings",
      "items": [
        "name",
        "alarm_address",
        "alarm_port",
        "alarm_code",
        "update_interval",
        "map_sensors"
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "expanded": false,
      "title": "Advanced URL settings",
      "items": [
        {
          "type": "help",
          "helpvalue": "<h6>Client URLs Mapping</h6><em class='primary-text'>Arbitrary modify URLs settings based on your installation type</em>"
        },
        "advanced.login",
        "advanced.login_info",
        "advanced.area_desc",
        "advanced.area_stat",
        "advanced.zone_desc",
        "advanced.zone_stat",
        "advanced.action",
        "advanced.code_param"
      ]
    },
    {
      "type": "fieldset",
      "expandable": true,
      "expanded": false,
      "title": "Advanced Area settings",
      "items": [
        {
          "type": "help",
          "helpvalue": "<h6>Away Area Mapping</h6><em class='primary-text'>Enter the area names that will be activated when selecting 'Away' from the Home App.</em>"
        },
        {
          "nodescription": true,
          "notitle": true,
          "key": "area_mapping.away_areas",
          "type": "array",
          "orderable": false,
          "items": [
            {
              "type": "div",
              "displayFlex": true,
              "flex-direction": "row",
              "items": [
                {
                  "key": "area_mapping.away_areas[]",
                  "flex": "1 1 50px",
                  "notitle": true,
                  "placeholder": "Enter area name..."
                }
              ]
            }
          ]
        },
        {
          "type": "help",
          "helpvalue": "<h6>Night Area Mapping</h6><em class='primary-text'>Enter the area names that will be activated when selecting 'Night' from the Home App.</em>"
        },
        {
          "nodescription": true,
          "notitle": true,
          "key": "area_mapping.night_areas",
          "type": "array",
          "orderable": false,
          "items": [
            {
              "type": "div",
              "displayFlex": true,
              "flex-direction": "row",
              "items": [
                {
                  "key": "area_mapping.night_areas[]",
                  "flex": "1 1 50px",
                  "notitle": true,
                  "placeholder": "Enter area name..."
                }
              ]
            }
          ]
        },
        {
          "type": "help",
          "helpvalue": "<h6>Home Area Mapping</h6><em class='primary-text'>Enter the area names that will be activated when selecting 'Home' from the Home App.</em>"
        },
        {
          "nodescription": true,
          "notitle": true,
          "key": "area_mapping.home_areas",
          "type": "array",
          "orderable": false,
          "items": [
            {
              "type": "div",
              "displayFlex": true,
              "flex-direction": "row",
              "items": [
                {
                  "key": "area_mapping.home_areas[]",
                  "flex": "1 1 50px",
                  "notitle": true,
                  "placeholder": "Enter area name..."
                }
              ]
            }
          ]
        },
        {
          "type": "help",
          "helpvalue": "<h6>Always ON Area Mapping</h6><em class='primary-text'>Enter the area names that are always ON in your system (leave this empty if you don't know)</em>"
        },
        {
          "nodescription": true,
          "notitle": true,
          "key": "area_mapping.always_on_areas",
          "type": "array",
          "orderable": false,
          "items": [
            {
              "type": "div",
              "displayFlex": true,
              "flex-direction": "row",
              "items": [
                {
                  "key": "area_mapping.always_on_areas[]",
                  "flex": "1 1 50px",
                  "notitle": true,
                  "placeholder": "Enter area name..."
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
