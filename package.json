{
  "name": "homebridge-comelit-vedo-platform",
  "version": "1.0.0-rc.4",
  "author": "Pierpaolo Follia",
  "repository": {
    "type": "git",
    "url": "https://github.com/madchicken/homebridge-comelit-vedo"
  },
  "description": "Comelit Vedo support for Homebridge: https://github.com/nfarina/homebridge",
  "license": "Apache-2.0",
  "keywords": [
    "homebridge-plugin",
    "comelit",
    "vedo"
  ],
  "engines": {
    "node": ">8.15.1",
    "homebridge": ">=0.4.5"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "config.schema.json"
  ],
  "scripts": {
    "build": "yarn run build-ts && yarn run lint",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"src/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"{src,__{tests,mocks}__}/**/*.ts\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "hap-nodejs": "^0.5.5",
    "comelit-client": "1.5.1",
    "homebridge": "^0.4.53",
    "lodash": "^4.17.15",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/node": "^11.15.3",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "nock": "^12.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  }
}
