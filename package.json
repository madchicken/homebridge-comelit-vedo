{
  "name": "homebridge-comelit-vedo-platform",
  "version": "1.1.0",
  "author": "Pierpaolo Follia",
  "repository": {
    "type": "git",
    "url": "https://github.com/madchicken/homebridge-comelit-vedo"
  },
  "description": "Comelit Vedo support for Homebridge: https://github.com/nfarina/homebridge",
  "license": "Apache-2.0",
  "keywords": [
    "homebridge-plugin",
    "comelit",
    "vedo"
  ],
  "engines": {
    "node": ">8.15.1",
    "homebridge": ">1.1.0"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "src",
    "config.schema.json"
  ],
  "scripts": {
    "build": "yarn clean && yarn build-ts",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "yarn run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"src/*.{js,ts}\" --quiet --fix",
    "prettier": "prettier --single-quote --trailing-comma es5 --write \"{src,__{tests,mocks}__}/**/*.ts\"",
    "clean": "rimraf dist/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "@alessandrofilino/comelit-client": "2.5.1",
    "express": "4.18.2",
    "lodash": "4.17.21",
    "prom-client": "^11.5.3",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/express-serve-static-core": "^4.17.32",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "homebridge": "^1.6.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "nock": "^12.0.2",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2"
  }
}
